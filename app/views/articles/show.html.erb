<% provide(:title, @article.title) %>
<% provide(:desc, truncate(strip_tags(@article.article.to_s.html_safe), :length => 200) ) %>
<% provide(:path, "articles/#{@article.id}") %>
<div id="article">
<div id="blogHeader">
      <h1><span class="alxs-icon">A</span>&nbsp;&nbsp; <%= @article.title %></h1>
      <hr />
</div>
  <div class="row outer" id="one">
    <div class="inner">
      <div class="large-8 large-offset-2 medium-10 medium-offset-1 small-10 small-offset-1 columns outer">

        <%= @article.article.html_safe %>

        <ul class="button-group radius">
          <%= link_to 'Edit', edit_article_path(@article), :class => 'button tiny' %>
          <%= link_to 'Back', articles_path, :class => 'button tiny info' %>
        </ul>
      </div>
    </div>
  </div>
</div>
